<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="1.2" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
	xmlns:portal="http://www.liferay.com/xml/ns/liferay-faces-portal-extension"
	xmlns:util="http://www.liferay.com/xml/ns/liferay-faces-util-extension">
	<faces-config-extension>
		<name>LiferayFacesPortal</name>
		<after>
			<name>LiferayFacesAlloy</name>
		</after>
	</faces-config-extension>
	<lifecycle>
		<phase-listener>com.liferay.faces.portal.lifecycle.LiferayLocalePhaseListener</phase-listener>
	</lifecycle>
	<managed-bean>
	   <managed-bean-name>liferay</managed-bean-name>
	   <managed-bean-class>com.liferay.faces.portal.el.internal.Liferay</managed-bean-class>
	   <managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<component>
		<component-type>com.liferay.faces.portal.PermissionsURL</component-type>
		<component-class>com.liferay.faces.portal.component.PermissionsURL</component-class>
	</component>
	<factory>
		<factory-extension>
			<portal:portlet-helper-factory>com.liferay.faces.portal.context.internal.PortletHelperFactoryImpl</portal:portlet-helper-factory>
			<portal:liferay-portlet-helper-factory>com.liferay.faces.portal.context.internal.LiferayPortletHelperFactoryImpl</portal:liferay-portlet-helper-factory>
			<util:faces-context-helper-factory>com.liferay.faces.portal.context.internal.FacesContextHelperFactoryPortletImpl</util:faces-context-helper-factory>
		</factory-extension>
	</factory>
	<render-kit>
		<renderer>
			<component-family>com.liferay.faces.portal.PermissionsURL</component-family>
			<renderer-type>com.liferay.faces.portal.component.permissionsurl.PermissionsURLRenderer</renderer-type>
			<renderer-class>com.liferay.faces.portal.component.internal.PermissionsURLRenderer</renderer-class>
		</renderer>
	</render-kit>
</faces-config>
